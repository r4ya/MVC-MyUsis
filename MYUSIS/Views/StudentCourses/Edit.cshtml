@model MYUSIS.Models.StudentCourse

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}
<div class="alert alert-primary" role="alert" style="margin-left: 25px; margin-right: 25px;">
    <p><h5 style="text-align: center;"><b>Öğrenci Ders Kaydı Düzenleme Bölümündesiniz</b></h5></p><hr />
    <p style="text-align: center;">Seçtiğiniz Öğrenci Ders Kaydını Düzenlemek İçin Tüm Bilgileri Eksiksiz Giriniz..</p>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-left: 25px; margin-right: 25px;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.StudentCourseID)
        <div class="card shadow mb-4">
            <!-- Card Header - Accordion -->
            <a href="#collapseC1" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseC1">
                <h6 class="m-0 font-weight-bold text-primary">Öğrenci Ders Genel Bilgileri</h6>
            </a>
            <!-- Card Content - Collapse -->
            <div class="collapse show" id="collapseC1">
                <div class="card-body">
                    <div class="form-row">
                        <div class="col-md-3 mb-3" style="margin-left: 10px;">
                            <label style="margin-left: 8px;">Öğrenci Adı</label>
                            @Html.DropDownList("StudentID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.StudentID, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-4 mb-3" style="margin-left: 15px;">
                            <label style="margin-left: 8px;">Ders Adı</label>
                            @Html.DropDownList("CourseID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CourseID, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-4 mb-3" style="margin-left: 15px;">
                            <label style="margin-left: 8px;">Yürütücü Adı</label>
                            @Html.DropDownList("LecturerID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LecturerID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-2 mb-3" style="margin-left: 10px;">
                            <label style="margin-left: 8px;">Derslik</label>
                            @Html.EditorFor(model => model.Classroom, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Classroom, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-3 mb-3" style="margin-left: 10px;">
                            <label style="margin-left: 8px;">Başlangıç Saati</label>
                            @Html.DropDownList("StartingTimeID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.StartingTimeID, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-3 mb-3" style="margin-left: 10px;">
                            <label style="margin-left: 8px;">Bitiş Saati</label>
                            @Html.DropDownList("FinishTimeID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.FinishTimeID, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-3 mb-3" style="margin-left: 10px;">
                            <label style="margin-left: 8px;">Gün İsmi</label>
                            @Html.DropDownList("DayID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DayID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a class="btn btn-warning" href="/StudentCourses/Index" role="button">Geri Dön</a>
            </div>
        </div>
    </div>
}

