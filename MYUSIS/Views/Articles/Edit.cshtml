@model MYUSIS.Models.Article

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<head>

    <link href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/themes/base/jquery-ui.css" rel="stylesheet" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js"></script>

    <style>
        * {
            font: 17px Calibri;
        }

        input {
            padding: 7px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
    </style>
</head>
<script>
    $(document).ready(function () {
        $('input[id$=tbDate]').datepicker({
            dateFormat: 'dd-mm-yy'			// Date Format "dd-mm-yy"
        });
    });
</script>


<div class="alert alert-primary" role="alert" style="margin-left: 25px; margin-right: 25px;">
    <p><h5 style="text-align: center;"><b>Makale Bilgileri Düzenleme Bölümündesiniz</b></h5></p><hr />
    <p style="text-align: center;">Seçtiğiniz Makale Bilgilerini Düzenlemek İçin Yeni Bilgileri Eksiksiz Doldurunuz.</p>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ArticleID)

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="card shadow mb-4" style="margin-right: 25px; margin-left: 25px;">
                <a href="#collapseB1" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseB1">
                    <h6 class="m-0 font-weight-bold text-primary">Blog Yazısı Genel Bilgileri</h6>
                </a>
                <!-- Card Content - Collapse -->
                <div class="collapse show" id="collapseB1">
                    <div class="card-body">
                        <div class="form-row">
                            <div class="col-md-10 mb-3" style="margin-left: 25px;">
                                <label style="margin-left: 8px;">Yazı Başlığı</label>
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-10 mb-3" style="margin-left: 25px;">
                                <label style="margin-left: 8px;">Yazı Özeti</label>
                                @Html.EditorFor(model => model.Sum, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Sum, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-10 mb-3" style="margin-left: 25px;">
                                <label style="margin-left: 8px;">Yazı İçeriği</label>
                                @Html.EditorFor(model => model.Cont, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Cont, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-3 mb-3" style="margin-left: 25px;">
                                <label style="margin-left: 8px;">Paylaşım Tarihi</label>
                                <input type='text' id='tbDate' placeholder='Paylaşım Tarihini Seçiniz' @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                                      
                                       @*@Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })*@   
                                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-3 mb-3" style="margin-left: 25px;">
                                <label style="margin-left: 8px;">Yazı Kategorisi</label>
                                @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-3 mb-3" style="margin-left: 25px;">
                                <label style="margin-left: 8px;">Yazar</label>
                                @Html.DropDownList("LecturerID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LecturerID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group" style="margin-left: 50px;">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Kaydet" class="btn btn-success" />
                    <a class="btn btn-warning" href="/Articles/Index" role="button">Geri Dön</a>
                </div>
            </div>

        </div>
        @*<div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>*@
    </div>
}
