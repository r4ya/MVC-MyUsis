@model MYUSIS.Models.Article

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<body>

    <div class="alert alert-danger" role="alert" style="margin-left: 25px; margin-right: 25px;">
        <p><h5 style="text-align: center;"><b>Blog Yazısı Silme Bölümündesiniz</b></h5></p><hr />
        <p style="text-align: center;">Sileceğiniz Yazı Bilgileri Aşağıdaki Gibidir</p>
    </div>
    <div>
        <div class="collapse show" id="collapseS1">
            <div class="card-body">
                <div class="form" style="margin-left: 15px; margin-right: 15px;">
                    <div><b>Yazı Başlığı: </b>@Html.DisplayFor(model => model.Title)</div>
                    <div><b>Paylaşım Tarihi: </b>@Html.DisplayFor(model => model.Date)</div>
                    <div><b>Yazı Kategorisi: </b>@Html.DisplayFor(model => model.Category.CategoryName)</div>
                    <div><b>Yazar Adı: </b>@Html.DisplayFor(model => model.Lecturer.Title) @Html.DisplayFor(model => model.Lecturer.FullName)</div><hr />

                </div>
               <div>
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">@Html.DisplayFor(model => model.Title) Özet Bölümü</h6>
                        </div>
                        <div class="card-body">
                            @Html.DisplayFor(model => model.Sum)
                        </div>
                    </div>
                </div>
                <div>
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">@Html.DisplayFor(model => model.Title) Yazı İçeriği</h6>
                        </div>
                        <div class="card-body">
                            @Html.DisplayFor(model => model.Cont)
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group" style="margin-left: 30px;">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Sil" class="btn btn-danger" />
                    <a class="btn btn-warning" href="/Articles/Index" role="button">Geri Dön</a>
                </div>
            </div>

        }
    </div>
</body>


