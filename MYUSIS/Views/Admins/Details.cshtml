@model MYUSIS.Models.Admin

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="alert alert-warning" role="alert" style="margin-left: 25px; margin-right: 25px;">
    <p><h5 style="text-align: center;"><b>Admin Bilgi Bölümündesiniz</b></h5></p><hr />
    <p style="text-align: center;">Seçtiğiniz Fakültenin Bilgileri Aşağıdaki Gibidir.</p>
</div>

<div>
    <div class="card">
        <div class="card-header">
            <b>Silinecek Admin Bilgileri:</b>
        </div>
        <div class="card-body">
            <div><b>Admin Kullanıcı Adı:</b> @Html.DisplayFor(model => model.UserName)</div>
            <div><b>Admin Kullanıcı Şifresi:</b> @Html.DisplayFor(model => model.Password)</div>
        </div>
    </div>
</div>
<br />
<div class="col-md-offset-2 col-md-10">
    <button class="btn btn-warning text-white">
        @Html.ActionLink("Düzenle", "Edit", new { id = Model.AdminID }, new { @class = "btn-sm btn-warning" })
    </button>
    <a class="btn btn-info" href="/Admins/Index" role="button">Geri Dön</a>
</div>

