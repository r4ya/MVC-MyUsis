@model MYUSIS.Models.StudentLesson

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}
<div class="alert alert-primary" role="alert" style="margin-left: 25px; margin-right: 25px;">
            <p><h5 style="text-align: center;"><b>Ders Harf Notu Düzenleme Bölümündesiniz</b></h5></p><hr />
            <p style="text-align: center;">Ders Harf Notu Düzenleyebilmeniz İçin Tüm Bilgileri Eksiksiz Giriniz..</p>
        </div>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.StudentLesson1)
        <div class="card shadow mb-4" style="margin-left: 25px; margin-right: 25px;">
            <!-- Card Header - Accordion -->
            <a href="#collapseC1" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseC1">
                <h6 class="m-0 font-weight-bold text-primary">Öğrenci Harf Notu Genel Bilgileri</h6>
            </a>
            <!-- Card Content - Collapse -->
            <div class="collapse show" id="collapseC1">
                <div class="card-body">
                    <div class="form-row">
                        <div class="col-md-5 mb-3" style="margin-left: 15px;">
                            <label style="margin-left: 8px;">Öğrenci Adı</label>
                            @Html.DropDownList("StudentID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.StudentID, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-5 mb-3" style="margin-left: 15px;">
                            <label style="margin-left: 8px;">Ders Adı</label>
                            @Html.DropDownList("CourseID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CourseID, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-5 mb-3" style="margin-left: 15px;">
                            <label style="margin-left: 8px;">Yürütücü Adı</label>
                            @Html.DropDownList("LecturerID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.LecturerID, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-5 mb-3" style="margin-left: 15px;">
                            <label style="margin-left: 8px;">Harf Notu</label>
                            @Html.EditorFor(model => model.LetterNote, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.LetterNote, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
            <div class="form-group" style="margin-left: 30px;">
                <div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Kaydet" class="btn btn-primary" />
					<a class="btn btn-warning" href="/StudentLessons/Index" role="button">Geri Dön</a>
                </div>
            </div>
        </div>
    }
    
</body>


