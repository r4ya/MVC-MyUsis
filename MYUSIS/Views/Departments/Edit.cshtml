@model MYUSIS.Models.Department

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="alert alert-primary" role="alert" style="margin-left: 25px; margin-right: 25px;">
            <p><h5 style="text-align: center;"><b>Bölüm Bilgileri Düzenleme Bölümündesiniz</b></h5></p><hr />
            <p style="text-align: center;">Seçtiğiniz Bölümün Bilgilerini Düzenlemek İçin Yeni Bilgileri Eksiksiz Doldurunuz.</p>
        </div>
		
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-left: 15px; margin-right: 15px;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DepartmentID)

        <div class="form-group">
            <h5  style="margin-left: 15px;">Bölüm İsmi: </h5>
            <div class="col-md-12">
                @Html.EditorFor(model => model.DepartmenName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DepartmenName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5 style="margin-left: 15px;">Fakülte İsmi: </h5>
            <div class="col-md-12">
                @Html.DropDownList("FacultyID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FacultyID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
                <a class="btn btn-warning" href="/Departments/Index" role="button">Geri Dön</a>
            </div>
        </div>
    </div>
}