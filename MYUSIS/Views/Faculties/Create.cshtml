@model MYUSIS.Models.Faculty

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}
<div class="alert alert-success" role="alert" style="margin-left: 25px; margin-right: 25px;">
    <p><h5 style="text-align: center;"><b>Yeni Fakülte Kayıt Bölümündesiniz</b></h5></p><hr />
    <p style="text-align: center;">Yeni Fakülte Kayıt Edebilmeniz İçin Tüm Bilgileri Eksiksiz Giriniz..</p>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h4 style="margin-left: 25px;"><b>Fakülte İsmi</b></h4>
            <div class="" style="margin-left: 25px; margin-right: 25px;">
                @Html.EditorFor(model => model.FacultyName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FacultyName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left: 10px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-success" />
                <a class="btn btn-warning" href="/Faculties/Index" role="button">Geri Dön</a>
            </div>
        </div>
    </div>
}
