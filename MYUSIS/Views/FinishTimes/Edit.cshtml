@model MYUSIS.Models.FinishTime

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}
<div class="alert alert-primary" role="alert" style="margin-left: 25px; margin-right: 25px;">
    <p><h5 style="text-align: center;"><b>Bitiş Saati Bilgileri Düzenleme Bölümündesiniz</b></h5></p><hr />
    <p style="text-align: center;">Seçtiğiniz Bitiş Saati Bilgilerini Düzenlemek İçin Yeni Bilgileri Eksiksiz Doldurunuz.</p>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.FinishTimeID)
    <div class="form-group">
        <label class="" style="margin-left: 12px;"><b>Başlangıç Saati:</b></label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.FinishTime1, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FinishTime1, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kaydet" class="btn btn-success" />
            <a class="btn btn-warning" href="/FinishTimes/Index" role="button">Geri Dön</a>
        </div>
    </div>
</div>
}
