@model MYUSIS.Models.Programme

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPageOgrenci.cshtml";
}


<div class="alert alert-warning" role="alert" style="margin-left: 25px; margin-right: 25px;">
    <p><h5 style="text-align: center;"><b>Eğitim Planı Bilgilerini Görüntüleme Bölümündesiniz</b></h5></p><hr />
