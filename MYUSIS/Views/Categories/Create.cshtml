@model MYUSIS.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}
<div class="alert alert-success" role="alert" style="margin-left: 25px; margin-right: 25px;">
    <p><h5 style="text-align: center;"><b>Yeni Kategori Kayıt Bölümündesiniz</b></h5></p><hr />
    <p style="text-align: center;">Yeni Kategori Kayıt Edebilmeniz İçin Tüm Bilgileri Eksiksiz Giriniz..</p>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="margin-left: 15px;margin-right: 15px;">
            <label class=""style="margin-left: 15px;"><b>Kategori İsmi:</b></label>
            <div class="col-md-12">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-left: 15px;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ekle" class="btn btn-success" />
                <a class="btn btn-warning" href="/Categories/Index" role="button">Geri Dön</a>
            </div>
        </div>
    </div>
}

