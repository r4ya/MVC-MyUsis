@model MYUSIS.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}
<div class="alert alert-danger" role="alert" style="margin-left: 25px; margin-right: 25px;">
    <p><h5 style="text-align: center;"><b>Makale Kategorisi Silme Bölümündesiniz</b></h5></p><hr />
    <p style="text-align: center;">Sileceğiniz Kategori Bilgileri Aşağıdaki Gibidir. Fakülte Silmeniz İleride Düzeltemeyeceğiniz Hatalara Sebep Olabilir.</p>
</div>
<div>
    <dl class="dl-horizontal" style="margin-left: 25px;">
        <h4><b>Silinecek Kategori: </b></h4>
        <h4>@Html.DisplayFor(model => model.CategoryName)</h4>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="col-md-offset-2 col-md-10" style="margin-left: 15px;">
            <input type="submit" value="Sil" class="btn btn-danger" />
            <a class="btn btn-warning" href="/Categories/Index" role="button">Geri Dön</a>
        </div>
    }
</div>

