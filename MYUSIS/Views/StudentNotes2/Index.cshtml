@model IEnumerable<MYUSIS.Models.StudentNote>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageOgretmen.cshtml";
}


<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-info">Öğrenci Not Ortalamaları: </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Adı Soyadı</th>
                            <th>AGNO</th>
                            <th>A.Kredi</th>
                            <th>YANO</th>
                            <th>Y.Kredi</th>
                            <th>ÇAD-YANO</th>
                            <th>Ç-Y.Kredi</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Adı Soyadı</th>
                            <th>AGNO</th>
                            <th>A.Kredi</th>
                            <th>YANO</th>
                            <th>Y.Kredi</th>
                            <th>ÇAD-YANO</th>
                            <th>Ç-Y.Kredi</th>
                            <th>Detaylar</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Student.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Agno)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AgnoKredi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Yano)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.YanoKredi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CadYano)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CadYanoKredi)
                                </td>
                                <td>
                                    @Html.ActionLink("Detaylar", "Details", new { id = item.StudentNoteID }, new { @class = "btn-sm btn-warning" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


