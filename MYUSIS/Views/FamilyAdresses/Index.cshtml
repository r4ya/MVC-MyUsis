@model IEnumerable<MYUSIS.Models.FamilyAdress>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Kategoriler</h1>
    <p class="mb-4">Kayıtlı Öğrenci Aile Adresleri Aşağıdaki Tablodaki Gibidir.</p>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Öğrenci Aile Adresleri: </h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Öğrenci Adı Soyadı</th>
                            <th>Aile Numarası</th>
                            <th>Aile Adresi</th>
                            <th>Posta Kodu</th>
                            <th>Düzenle</th>
                            <th>Detaylar</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Öğrenci Adı Soyadı</th>
                            <th>Aile Numarası</th>
                            <th>Aile Adresi</th>
                            <th>Posta Kodu</th>
                            <th>Düzenle</th>
                            <th>Detaylar</th>
                            <th>Sil</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Student.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telephone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Adress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PK)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.FamilyAdressID }, new { @class = "btn btn-primary" })
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { id = item.FamilyAdressID }, new { @class = "btn btn-warning" })
                                </td>
                                <td>
                                    @Html.ActionLink("Delete", "Delete", new { id = item.FamilyAdressID }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

