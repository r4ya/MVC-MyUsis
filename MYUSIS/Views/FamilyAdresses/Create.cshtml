@model MYUSIS.Models.FamilyAdress


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}
<div class="alert alert-success" role="alert" style="margin-left: 25px; margin-right: 25px;">
    <p><h5 style="text-align: center;"><b>Yeni Aile Adresi Kayıt Bölümündesiniz</b></h5></p><hr />
    <p style="text-align: center;">Yeni Aile Adresi Edebilmeniz İçin Tüm Bilgileri Eksiksiz Giriniz..</p>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="" style="margin-left: 12px;"><b>Öğrenci İsmi:</b></label>
        <div class="col-md-12">
            @Html.DropDownList("StudentID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.StudentID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="" style="margin-left: 12px;"><b>Aile Telefon Numarası:</b></label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="" style="margin-left: 12px;"><b>Aile Adresi:</b></label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.Adress, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Adress, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="" style="margin-left: 12px;"><b>Posta Kodu:</b></label>
        <div class="col-md-12">
            @Html.EditorFor(model => model.PK, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PK, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ekle" class="btn btn-primary" />
            <a class="btn btn-warning" href="/Home/OgrenciIslem" role="button">Geri Dön</a>
        </div>
    </div>
</div>
}

