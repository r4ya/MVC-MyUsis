@model IEnumerable<MYUSIS.Models.LecturerCourse>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-2 font-weight-bold text-primary">Ders Programı: </div>
                <div class="col-10" style="text-align:end">
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Adı Soyadı</th>
                            <th>Ders Adı</th>
                            <th>Derslik</th>
                            <th>Ders Günü</th>
                            <th>Ders Saati</th>
                            <th>Düzenle</th>
                            <th>Detaylar</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Adı Soyadı</th>
                            <th>Ders Adı</th>
                            <th>Derslik</th>
                            <th>Ders Günü</th>
                            <th>Ders Saati</th>
                            <th>Düzenle</th>
                            <th>Detaylar</th>
                            <th>Sil</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Lecturer.Title) @Html.DisplayFor(modelItem => item.Lecturer.FullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Course.CourseName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Classroom)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Day.DayName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StartingTime.StatingTime)-@Html.DisplayFor(modelItem => item.FinishTime.FinishTime1)
                                </td>
                                <td>
                                    @Html.ActionLink("Düzenle", "Edit", new { id = item.LecturerCourseID }, new { @class = "btn-sm btn-primary" })
                                </td>
                                <td>
                                    @Html.ActionLink("Detaylar", "Details", new { id = item.LecturerCourseID }, new { @class = "btn-sm btn-warning" })
                                </td>
                                <td>
                                    @Html.ActionLink("Sil", "Delete", new { id = item.LecturerCourseID }, new { @class = "btn-sm btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



